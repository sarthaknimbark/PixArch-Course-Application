<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Welcome">

    <ImageView
        android:id="@+id/weliv1"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        app:srcCompat="@drawable/welcomebg" />

    <ImageView
        android:id="@+id/weliv2"
        android:layout_width="149dp"
        android:layout_height="186dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="262dp"
        app:srcCompat="@drawable/pixlogoround" />

    <TextView
        android:id="@+id/weltv1"
        android:layout_width="317dp"
        android:layout_height="111dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="303dp"
        android:gravity="center"
        android:text="Welcome to\n PixArch Studio"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/welbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="68dp"
        android:backgroundTint="#000C4C"
        android:padding="15dp"
        android:textColor="@color/white"
        android:text="Get Started for free >" />

    <TextView
        android:id="@+id/weltv2"
        android:layout_width="325dp"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="216dp"
        android:gravity="center"

        android:text="PixArch studio is a 3d visualization \ncompany based in Surat, Gujarat(India)"
        android:textColor="@color/black"
        android:textSize="15dp" />


</RelativeLayout>

