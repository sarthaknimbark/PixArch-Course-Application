<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000C4C"
    tools:context=".Signin">


    <ImageView
        android:id="@+id/siiv1"
        android:layout_width="149dp"
        android:layout_height="170dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="31dp"
        android:layout_marginTop="25dp"
        app:srcCompat="@drawable/pixlogoround" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="410dp"
        android:layout_height="670dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="217dp"
        android:layout_marginBottom="4dp"
        app:srcCompat="@drawable/signupbg" />

    <TextView
        android:id="@+id/sitv1"
        android:layout_width="166dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="41dp"
        android:gravity="center"
        android:text="Sign In"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="309dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/sitv2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            android:padding="5dp"
            android:text="Email:"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/siet1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/signupetbg"
            android:ems="10"
            android:inputType="text"
            android:padding="15dp"
            android:text=""
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:hint="Enter your Email ID"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sitv3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            android:padding="5dp"
            android:text="Password:"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/siet2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            android:drawableRight="@drawable/baseline_password_24"
            android:background="@drawable/signupetbg"
            android:ems="10"
            android:textColorHint="@color/black"
            android:inputType="textPassword"
            android:padding="15dp"
            android:text=""
            android:textColor="@color/black"
            android:password="true"
            android:hint="Enter Password"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sitv4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textAlignment="textEnd"
            android:layout_marginTop="15dp"
            android:textSize="18dp"
            android:layout_marginEnd="20dp"
            android:text="Don't have Account?" />

        <Button
            android:id="@+id/sibtn1"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:backgroundTint="#000C4C"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="80dp"
            android:text="Sign In >"
            android:textColor="@color/white"
            android:padding="15dp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/sitv5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="Or SignIn With" />

        <Button
            android:id="@+id/sibtn2"
            android:layout_width="150dp"
            android:layout_height="65dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:backgroundTint="#E3E1E1"
            android:padding="10dp"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/googleg_standard_color_18"
            android:text="Google"
            android:textColor="@color/black"
            android:textStyle="bold" />


    </LinearLayout>

    <ProgressBar
        android:id="@+id/sipp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="180dp"
        android:layout_marginTop="248dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.804" />
</RelativeLayout>